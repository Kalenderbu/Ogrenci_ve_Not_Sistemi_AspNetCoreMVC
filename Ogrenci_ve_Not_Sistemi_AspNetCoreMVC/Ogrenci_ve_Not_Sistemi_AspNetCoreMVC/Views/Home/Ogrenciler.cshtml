<div class="container col-11 float-end mt-5">
    <div class="row">
        <div class="col-sm-10"></div>
        <div class="col-sm-2 text-right">
            <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Ogrenci_Kayit">Yeni Kayıt</a>
        </div>
    </div>
    <br />
    <table class="table table-striped table-bordered table-hover" id="siralanacakTablo">
        <thead>
        <tr class="table-dark">
            <td>Öğrenci No</td>
            <td>Ad</td>
            <td>Soyad</td>
            <td>TC Kimlik No</td>
            <td>Cinsiyet</td>
            <td>&nbsp;</td>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var tEleman in Model)
            {
                @:<tr @if (@tEleman.Cinsiyet == "Erkek") { @: class="table-primary"
                      } else if (@tEleman.Cinsiyet == "Kadın") { @: class="table-danger"
                      } else { @: class="table-light"
                      }
                       @:>
                    <td>@tEleman.OgrenciNo</td>
                    <td>@tEleman.OgrenciAd</td>
                    <td>@tEleman.OgrenciSoyad</td>
                    <td>@tEleman.TCK</td>
                    <td>@tEleman.Cinsiyet</td>
                    <td>
                        <a asp-controller="Home" asp-action="Ogrenci_Duzelt" asp-route-id="@tEleman.OgrenciID"><span class="btn badge badge-primary"><span class="btn-sm btn-primary bi bi-pencil"></span></span></a>&nbsp;
                        <a asp-controller="Home" asp-action="Ogrenci_Sil" asp-route-id="@tEleman.OgrenciID"><span class="btn badge badge-danger"><span class="btn-sm btn-danger bi bi-trash"></span></span></a>
                    </td>
                @:</tr>
            }
        }
        </tbody>
    </table>
</div>
